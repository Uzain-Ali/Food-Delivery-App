                    "host": ["{{base_url}"],
                    "path": ["api", "analytics", "delivery-times"]
                }
            },
            "response": []
        },
        {
            "name": "Get Active Orders",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer your-sanctum-token"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8000/api/orders/active",
                    "host": ["{{base_url}"],
                    "path": ["api", "orders", "active"]
                }
