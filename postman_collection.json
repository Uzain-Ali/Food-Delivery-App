{
    "info": {
        "_postman_id": "food-delivery-api-collection",
        "name": "Food Delivery API Collection",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer your-sanctum-token"  
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": json.stringify({
                        "restaurant_id": 1,
                        "user_id": 1,
                        "total_cost": 50.00
                    }),
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "http://localhost:8000/api/orders",
                    "host": ["{{base_url}"],
                    "path": ["api", "orders"]
                }
            },
            "response": []
        },
        {
            "name": "Get Top Popular Dishes",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer your-sanctum-token"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8000/api/analytics/popular-dishes/1",
                    "host": ["{{base_url}"],
                    "path": ["api", "analytics", "popular-dishes", "1"]
                }
            },
            "response": []
        },
        {
            "name": "Get Average Delivery Times",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json"
                    },
                    {
